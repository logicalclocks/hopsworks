[
    {
        "name": "hopsworks/migration",
        "version": "`cat pom.xml | yq -p xml .project.version`",
        "excludeRegistries": [
            "ecr_prod"
        ],
        "variables": [
            "RELEASED_VERSION"
        ],
        "extraDockerArgs": "--build-arg version=\"$RELEASED_VERSION\"",
        "dockerFile": "docker/migration/Dockerfile"
