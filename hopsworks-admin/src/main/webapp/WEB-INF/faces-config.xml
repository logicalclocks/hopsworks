      <to-view-id>/security/protected/admin/mobileUsers.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>spamUsers</from-outcome>
      <to-view-id>/security/protected/admin/spamUsers.xhtml</to-view-id>
