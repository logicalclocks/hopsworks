      <from-outcome>changeMasterEncPass</from-outcome>
      <to-view-id>/security/protected/admin/changeMasterEncPass.xhtml</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-outcome>refresh_variables</from-outcome>
      <to-view-id>/security/protected/admin/refreshVariables.xhtml</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-outcome>manage_hosts</from-outcome>
      <to-view-id>/security/protected/admin/hostsManagement.xhtml</to-view-id>
      <redirect/>
